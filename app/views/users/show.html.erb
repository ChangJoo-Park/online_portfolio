<% if @user.layouts == "layout1" %>
  <% content_for :head do %>
    <%= stylesheet_link_tag 'layout1' %>
  <% end %>

  <%= render 'layout1' %>
<% end %>

<% if @user.layouts == "layout2" %>
  <% content_for :head do %>
    <%= stylesheet_link_tag 'layout2' %>
    <%= javascript_include_tag "layout2.js" %>
  <% end %>

  <%= render 'layout2' %>
<% end %>
