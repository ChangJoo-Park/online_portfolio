<div class="container">
<ul>
  <% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>
  </li>
 </ul>
<% end %>
</div>

<div class="container project_index">
  <% if user_signed_in? %>
  <h1>Listing Projects
    <span><%= link_to 'New Project', "#new_project", data: { toggle: "modal" }, class: "btn btn-primary", id: 'btn_new_project' %></span>

  </h1>

  <%= render "modal_new" %>

  <hr>
  	<div class="projects row">
  		<%= render 'list' %>
  	</div>
  <div class="trashcan droppable none"></div>

  <% end %>
  <%= javascript_include_tag "sort_project" %>
  <%= javascript_include_tag "trashcan_project" %>
</div>
