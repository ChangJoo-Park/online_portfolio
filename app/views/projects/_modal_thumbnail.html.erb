 <!-- Modal -->
<div class="modal fade" id="new_thumbnail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Change Thumbnail of Project</h4>
      </div>
      <div class="modal-body">
        <p><strong>Before Thumbnail</strong><%= before_thumbnail(project) %></p>
        <hr>
				<%= form_for project do |f| %>
					<%= f.label :thumbnail, "New Thumbnail" %>
					<%= f.file_field :thumbnail %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Update Thumbnail", class:"btn btn-primary" %>
      </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
