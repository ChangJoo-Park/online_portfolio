<div class="tab-pane fade border-form-div" id="profile">
<h1>
  Fill your profile
</h1>
<hr>
<%= form_for(@user, url: registration_path(@user),html: { method: :put }) do |f| %>
  <p>
    <%= f.label :fullname %>
    <%= f.text_field :fullname %>
  </p>

  <p>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.label :website %>
    <%= f.text_field :website %>
  </p>

  <p>
    <%= f.label :facebook %>
    <%= f.text_field :facebook %>
  </p>

  <p>
    <%= f.label :twitter %>
    <%= f.text_field :twitter %>
  </p>

  <p>
    <%= f.label :bio %><br/>
    <%= f.text_area :bio ,size: "93%x10" %>
  </p>
  <p>
    <%= f.label :current_password %><br/><i>(we need your current password to confirm your changes)</i><br/>
    <%= f.password_field :current_password %>
  </p>
  <p>
    <%= f.submit "Update Profile" ,class: "btn btn-primary" %>
  </p>
<% end %>
</div>
